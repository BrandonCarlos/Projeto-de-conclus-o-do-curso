{% extends "layout.njk" %}

{% import "parts/card.njk" as card %}

{% block content %}

  {% call card.render('Esqueceu a senha?', 'password container')%}

    <!--action="" é para onde ele vai enviar-->
    <form method="POST" action="/usuarios/forgot-password">

      <div class="campos">
        <div class="item">
          <div>Email</div>
          <div class="input">
            <!--Neste INPUT se espera algo do tipo: https://-->
            <!--Os "names" que eu to colocando eu vou receber lá no BACK-END, lá no ROUTES -->
            <!--Para deixarmos o VALOR dentro do INPUT usamos o value=""-->
            <input type="email" name="email" placeholder="Digite o email cadastrado" value="{{usuario.email}}" onblur="Validar.aplicar(this, 'Email')">
          </div>
        </div>
      </div>

      <button class="button" type="submit">Recuperar senha</button>

    </form>
    {%endcall%}

{% endblock content %}